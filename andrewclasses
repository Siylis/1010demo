class Budget:
    def __init__(self, expenses_type):
        self.expenses_type = expenses_type
        self.catergories = []
        self.expenses = []

    def add_expenses(self):
        while True:
            try:
                expenses_amount = int(input(f"Enter number of {self.expenses_type} expenses you want to add (integers only): "))
                break
            except:
                print("Please put a integer\n")

        print(f"Enter {self.expenses_type} expenses in \"type cost\" Format.")

        for i in range(expenses_amount):
            while True:
                try:
                    type, e = input (f"Enter expenses #{i + 1}: ").split()
                    self.expenses.append(float(e))
                    self.catergories.append(type)
                    break
                except:
                    print()
                    print("Enter expenses in \"type cost\" Format.")
                    print()

    def get_expenses(self):
        print(f"Total money you spent on {self.expenses_type} is {sum(self.expenses)}.")
        return sum(self.expenses)
    
    def get_expenses_list(self):
        print()
        
